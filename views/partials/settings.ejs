<section class="container d-none" id="settings">
    <div class="row justify-content-between mx-0">
        <div class="col-md-6 order-2 order-md-0 bg-white rounded h-100 p-3">
            <h1 class="text-center">ڕێکخستنەکان</h1>
            <div class="input-group mb-3">
                <label class="input-group-text" for="rounds">ژمارەی خولەکان</label>
                <select class="form-select" id="rounds">
                    <option value="2" selected>٢</option>
                    <option value="3">٣</option>
                    <option value="4">٤</option>
                    <option value="5">٥</option>
                    <option value="6">٦</option>
                    <option value="7">٧</option>
                    <option value="8">٨</option>
                    <option value="9">٩</option>
                    <option value="10">١٠</option>
                </select>
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="time">کاتی وێنەکێشان بە چرکە</label>
                <select class="form-select" id="time">
                    <option value="30">٣٠</option>
                    <option value="40" selected>٤٠</option>
                    <option value="50">٥٠</option>
                    <option value="60">٦٠</option>
                    <option value="70">٧٠</option>
                    <option value="80">٨٠</option>
                    <option value="90">٩٠</option>
                    <option value="100">١٠٠</option>
                    <option value="110">١١٠</option>
                    <option value="120">١٢٠</option>
                    <option value="130">١٣٠</option>
                    <option value="140">١٤٠</option>
                    <option value="150">١٥٠</option>
                    <option value="160">١٦٠</option>
                    <option value="170">١٧٠</option>
                    <option value="180">١٨٠</option>
                </select>
            </div>
            <div class="input-group mb-3">
                <label for="language" class="input-group-text">زمان</label>
                <select id="language" class="form-select">
                    <option value="kurdish" selected>کوردی</option>
                </select>
            </div>
            <% if(!roomID) { %>
            <div class="input-group mb-3">
                <label class="input-group-text" for="customeWords">وشەکانی تایبەت</label>
                <textarea class="form-control" placeholder="وشەی ١&#10;وشەی ٢&#10;وشەی ٣" id="customWords"
                    style="height: 20vh; resize:none"></textarea>
            </div>
            <div class="mb-3">
                <label for="probability" class="form-label">ڕێژەی وشەکانی تایبەت</label>
                <input type="range" class="form-range" min="0" max="1" step="0.01" id="probability">
            </div>
            <% } %>
            <button class="btn btn-primary w-100" id="startGame">دەستپێکردنی یاری</button>
        </div>
        <div class="col-md-6 text-white h-100 p-3">
            <h1 class="text-center">یاریزانەکان</h1>
            <div class="row mt-4 mx-0" style="height: 20em; overflow-y: auto;" id="playersDiv"></div>
        </div>
    </div>
    <div class="mt-5">
        <h1 class="text-white text-center">هاوڕێکانت بانگهێشت بکە!</h1>
        <div class="input-group mb-3">
            <input type="text" id="gameLink" class="form-control text-center fw-bold bg-white"
                value="http://localhost:3000/" readonly>
            <button class="btn btn-warning" type="button" id="copy">لەبەرگرتنەوەی لینک</button>
        </div>
    </div>
</section>
