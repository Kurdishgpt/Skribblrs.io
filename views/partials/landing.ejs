<section class="container" id="landing">
    <div class="row justify-content-center mx-0">
        <div class="col-lg-6 bg-white rounded p-3">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="playerName" placeholder="ناو" required>
                <label for="playerName">ناو</label>
            </div>
            <div class="row justify-content-center mx-0">
                <div class="col-6 col-sm-5">
                    <img id="avatar" class="img-fluid rounded-circle mb-4 mb-sm-0"
                        src="https://api.dicebear.com/9.x/avataaars/svg?seed=default" alt="Avatar">
                </div>
                <div class="col-sm-7">
                    <div class="input-group mb-3">
                        <label class="input-group-text" for="style">شێواز</label>
                        <select class="form-select" id="style">
                            <option value="Avataaars" selected>Avataaars</option>
                            <option value="Bottts">Bottts</option>
                            <option value="Fun-emoji">Fun-emoji</option>
                            <option value="Lorelei">Lorelei</option>
                            <option value="Identicon">Identicon</option>
                            <option value="Initials">Initials</option>
                            <option value="Pixel-art">Pixel-art</option>
                            <option value="Adventurer">Adventurer</option>
                            <option value="Micah">Micah</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <label class="input-group-text" for="bgColor" class="form-label">ڕەنگی پاشبنەما</label>
                        <input type="color" class="form-control form-control-color" id="bgColor" value="#FFFFFF"
                            title="ڕەنگەکەت هەڵبژێرە">
                    </div>
                </div>
                <% if(!roomID) { %>
                    <button class="btn btn-primary mt-3" id="createRoom">دروستکردنی ژوور</button>
                    <div class="w-100 text-center my-3">
                        <span class="text-muted">ـــــــــ یان ـــــــــ</span>
                    </div>
                    <div class="input-group">
                        <input type="text" class="form-control" id="roomCode" placeholder="کۆدی ژوور بنووسە">
                        <button class="btn btn-success" id="joinByCode">چوونە ژوور</button>
                    </div>
                <% } else { %>
                    <button class="btn btn-primary mt-3" id="playGame">چوونە ناو ژوور</button>
                <% } %>
            </div>
        </div>
    </div>
</section>
